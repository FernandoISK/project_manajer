@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var Empleados = (List<Project_Manager.Services.BO.TblEmpleadoBO>)ViewBag.EmpleadoList; //Crea una variable con una lista y la almacena en el ViewBag del controlador
}

<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Tablas de Choferes</h1>
            <p class="mb-4">Esta tabla contiene todos los datos basicos de todos los empleados.</p>
            <!-- DataTales Example -->
            @if (Empleados.Count > 0)
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Datos de los choferes</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                                <thead>

                                    <tr>
                                        <th scope="col" style="display:none">Id</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Apellidos</th>
                                        <th scope="col">Telefono</th>
                                        <th scope="col">Sexo</th>
                                        <th></th>
                                    </tr>

                                </thead>

                                <tbody>

                                    @foreach (Project_Manager.Services.BO.TblEmpleadoBO item in Empleados)
                                    {
                                        <tr>
                                            <td>@item.NombreEmpleado</td>
                                            <td>@item.ApellidoPEmpleado @item.ApellidoMEmpleado</td>
                                            <td>@item.TelefonoEmpleado</td>
                                            <td>@item.GeneroEmpleado</td>

                                            @if (item.Estatus == 1)
                                            {
                                                <td>

                                                    <button type="button" onclick="Employees.evts.updateStatus('@item.IDEmpleado','1')" class="btn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                                </td>
                                            }

                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <tr><td>Sin resultados</td></tr>
            }

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; FernandoISK 2019</span>
            </div>
        </div>
    </footer>


    <!-- End of Footer -->

</div>

<script src="~/Scripts/Employees.js"></script>
