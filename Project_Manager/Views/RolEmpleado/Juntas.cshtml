
@{
    ViewBag.Title = "Select";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<div class="card">
    <div class="card-header">
        <h2>Sugerencia de juntas</h2>
        <p class="mb-4">Todos los campos señalados con un "*" son oblogatorios</p>
    </div>
    <div class="card-body">
        <form method="post" id="frmCreate">
            <div class="group form-group">
                <fieldset>
                    <legend>Datos personales</legend>
                    <div class="row col-lg-12">
                        <div class="col-md-4">
                            <label class="label">Titulo de la junta*</label>
                            <input type="text" class="form-control" id="txtNombre">
                        </div>
                        <div class="col-md-4">
                            <label class="label">Empresa ha tratar*</label>
                            <select asp-for="veh.modelo" class="form-control col-md-12" id="txtGenero">
                                <option selected disabled>--Seleccione--</option>
                                <option value="F">Femenino</option>
                                <option value="M">Masculino</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="label ">Proyecto a tratar*</label>
                            <select asp-for="veh.modelo" class="form-control col-md-12" id="txtGenero">
                                <option selected disabled>--Seleccione--</option>
                                <option value="F">Femenino</option>
                                <option value="M">Masculino</option>
                            </select>
                        </div>
                    </div>
                    <div class="row col-lg-12">
                        <div class="col-lg-4">
                            <label class="label">Fecha ha sugerir*</label>
                            <input id="txtfecha" type="date" class="form-control">
                        </div>
                        <div class="col-lg-9">
                            <div class="row col-lg-12">
                                <label asp-for="veh.modelo" class="label">Motivo*</label>
                            </div>
                            <div class="row col-lg-12">
                                <textarea maxlength="250" id="mensaje" rows="4" cols="70"></textarea>
                            </div>
                            <div class="row col-lg-12">
                                <div id="contador">0/100</div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>
