
@{
    ViewBag.Title = "Ap-Manger | Catalógo de reportes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int IdJunta = ViewBag.IDJunta;
}

<div class="card">
    <div class="card-header">
        <h2>Agregar Proyecto</h2>
        <p class="mb-4">Todos los campos señalados con un "*" son oblogatorios</p>
    </div>
    <div class="card-body">
        <form method="post" id="frmCreateReport">
            
            <div class="group form-group">
                <fieldset>
                    <div class="col-lg-5">
                        <label asp-for="veh.modelo" class="label">Motivo</label>
                        <select asp-for="veh.modelo" class="form-control col-md-12" id="cmdMotivo">
                            <option selected disabled>--Seleccione--</option>
                            <option value="0">Entrega proyecto</option>
                            <option value="1">Aclaración de dudas</option>
                            <option value="2">Otros</option>
                        </select>
                    </div>
                    <br />
                    <di class="row col-lg-12">
                        <input type="hidden" value="@IdJunta" id="cmbProyecto">
                        <div class="col-lg-12">
                            <div class="row col-lg-12">
                                <label asp-for="veh.modelo" class="label">Descripción*</label>
                            </div>
                            <div class="row col-lg-12">
                                <textarea maxlength="250" id="mensaje" rows="4" cols="70"
                                          class="form-control">

                                </textarea>
                            </div>
                            <div class="row col-lg-12">
                                <div id="contador">0/500</div>
                            </div>
                        </div>

                    </di>

                </fieldset>
            </div>
            <div class="group">
                <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>

<script>
    const mensaje = document.getElementById('mensaje');
    const contador = document.getElementById('contador');

    mensaje.addEventListener('input', function (e) {
        const target = e.target;
        const longitudMax = target.getAttribute('maxlength');
        const longitudAct = target.value.length;
        contador.innerHTML = `${longitudAct}/${longitudMax}`;
    });
</script>

<script src="~/Scripts/RolEmpleado.js"></script>
<script>
    $(function () {
        Rol.init();
    });
</script>

